<% @properties.each do |property| %>
<div class="container d-flex justify-content-center pt-5">
  <div class="card" style="width: 20rem;">
    <img class="card-img-top" src="http://via.placeholder.com/318x180" alt="Card image cap">
    <div class="card-img-overlay">
      <h4 class="card-title"><%= property.title %></h4>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col">
          <p class="card-title"><%= property.price %></p>
          <p class="card-subtitle text-muted">Address</p>
        </div>
        <div class="col text-center">
          <div class="row">
            <div class="col"><span>🛏</span><%= property.bed %></div>
            <div class="col"><span>🛀</span><%= property.bath %></div>
            <div class="col"><span>🚙</span><%= property.car %></div>
          </div class="row">
          <div class="row">
            <div class="col">4</div>
            <div class="col">2</div>
            <div class="col">1</div>
          </div class="row">
        </div>
      </div>
      <p class="card-text">
        <%= property.description %>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      </p>
      <a href="#" class="btn btn-primary">View details</a>
    </div>
  </div>
</div>
<%end%>
